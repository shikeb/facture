<%= render 'header' %>
<div class="col-md-8 order-md-1 offset-md-2">
  <div class="row">
    <h4><%= @invoice.company_name %></h4>
  </div>
  <div class="row mt-4">
    <div class="col-md-6">
      <div class="row">
        <%= @invoice.merchant_name %>
      </div>
      <div class="row">
        <%= @invoice.merchant_email %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-3"><strong>Invoice#</strong> </div>
        <div class="col-md-3"><%= @invoice.invoice_number %></div>
      </div>
      <div class="row">
        <div class="col-md-3"><strong>Date</strong> </div>
        <div class="col-md-6"><%= @invoice.created_at.strftime("%F") %></div>
      </div>
      <hr class="mb-4">
      <div class="row">
        <div class="col-md-3"><strong>Amount</strong> </div>
        <div class="col-md-6"><%= @invoice.currency %><%=@invoice.amount %></div>
      </div>
      <hr class="mb-4">
    </div>
  </div>

  <div class="row mt-3"> <h5>Bill to:</h5> </div>
  <div class="row">
    <div class="col-md-6">
      <div class="row">
        <%= @invoice.customer_name %>
      </div>
      <div class="row">
        <%= @invoice.customer_email %>
      </div>
      <div class="row mt-4">
        <h5>Description</h5>
      </div>
      <div class="row">
        <%= @invoice.note %>
      </div>
    </div>
    
  </div>
  <div class="mt-4">&nbsp;</div>
  <div class="row d-print-none mt-4">
      <%= link_to "Print", "#", :onclick => "printInvoice()", class: "btn btn-sm btn-secondary" %>&nbsp;
      <%= button_to "Download PDF", invoice_path(@invoice, format: :pdf), method: :get, class: "btn btn-sm btn-secondary" %>&nbsp;
      <%= button_to "Edit", edit_invoice_path(@invoice), method: :get, class: "btn btn-sm btn-secondary" %> &nbsp;
      <%= button_to "Invoice History", invoices_path(), method: :get, class: "btn btn-sm btn-secondary" %>
  </div>
  <div class="d-none d-print-block row">
    hgello
  </div>
</div>


