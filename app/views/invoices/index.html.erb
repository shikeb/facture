<%= render 'header' %>
<div class="row">
<div class="col-md-10 order-md-1 offset-md-1">
<div class="row mb-4">
    <%= button_to "New Invoice", new_invoice_path(@invoice), method: :get, class: "btn btn-sm btn-secondary" %>
</div>

<table class="table">
<thead>
<tr>
  <th>Invoice ID</th>
  <th colspan=4>Company</th>
  <th colspan=4>Customer</th>
  <th>Amount Billed</th>
  <th colspan=3></th>
</tr>
</thead>

<tbody>
  <% @invoices.each do |invoice| %>
    <tr>
      <td><%= invoice.invoice_number  %></td>
      <td colspan=4><%= invoice.company_name  %></td>
      <td colspan=4><%= invoice.customer_name  %></td>
      <td><%= invoice.currency  %><%= invoice.amount  %></td>
      <td> 
      <div class="btn-group" role="group">
      <%= link_to  "Details", invoice_path(invoice), method: :get, class: "btn btn-sm btn-secondary"  %>
      <%= link_to "Edit", edit_invoice_path(invoice), method: :get, class: "btn btn-sm btn-secondary" %>
      <%= link_to  "Delete", invoice_path(invoice), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-secondary"  %>
       </div>
      </td>
    </tr>
  <% end %>
</tbody>

</table>

</div>
</div>